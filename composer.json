{
    "name": "mahdimajidzadeh/persianalize",
    "type": "library",
    "description": "Laravel package for normalize Persian text",
    "keywords": [
        "persian",
        "laravel",
        "normalize"
    ],
    "homepage": "https://github.com/MahdiMajidzadeh/Persianalize",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Majidzadeh",
            "email": "mahdi@majidzadeh.ir",
            "homepage": "majidzadeh.ir",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "MahdiMajidzadeh\\Persianalize\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MahdiMajidzadeh\\Persianalize\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
